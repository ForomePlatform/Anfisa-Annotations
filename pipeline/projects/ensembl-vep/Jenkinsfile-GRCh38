node {

	try {
		def fileCacheVep = "pipeline/projects/ensembl-vep/homo_sapiens_merged_vep.tar.gz"
		def fileFasta = "pipeline/projects/ensembl-vep/Homo_sapiens.dna.primary_assembly.fa.gz"

		stage('init') {
			echo 'Initializing...'

			def docker = tool name: 'docker-17.09.0-ce'
			env.PATH = "${docker}:${env.PATH}"
		}

		stage('clean workspace & checkout') {
			deleteDir()
			checkout scm
		}

		stage('Build link from external resources') {
		    // ftp://ftp.ensembl.org/pub/release-98/variation/indexed_vep_cache/homo_sapiens_merged_vep_98_GRCh38.tar.gz
            sh("cp /external_resources/homo_sapiens_merged_vep_98_GRCh38.tar.gz ${fileMergeVep}")

            //ftp://ftp.ensembl.org/pub/release-98/fasta/homo_sapiens/dna/Homo_sapiens.GRCh38.dna.primary_assembly.fa.gz
            sh("ln -s /external_resources/Homo_sapiens.GRCh38.dna.primary_assembly.fa.gz ${fileFasta}")

			// ftp://dbnsfp:dbnsfp@dbnsfp.softgenetics.com/dbNSFP4.0c.zip
        }

		stage('Build & Publish docker image') {
			def image = "${params.DOCKERHUB}/forome/ensembl-vep:98.GRCh37";
			sh("tar -czh . | docker build - -t ${image} --build-arg FILE_MERGE_VEP=${fileMergeVep} --build-arg FILE_FASTA=${fileFasta} --file pipeline/projects/ensembl-vep/Dockerfile")
			sh("docker push ${image}")
		}

	} catch (Throwable e) {
		throw e
	}

}
