node {

	try {
		stage('init') {
			echo 'Initializing...'

			def docker = tool name: 'docker-17.09.0-ce'
			env.PATH = "${docker}:${env.PATH}"

			System.setProperty("org.jenkinsci.plugins.durabletask.BourneShellScript.HEARTBEAT_CHECK_INTERVAL", "3800")
		}

		stage('clean workspace & checkout') {
			deleteDir()
			checkout scm
		}

		stage('Build link from external resources') {
		    // ftp://ftp.ensembl.org/pub/release-98/variation/indexed_vep_cache/homo_sapiens_merged_vep_98_GRCh37.tar.gz
            sh("ln -s /external_resources/homo_sapiens_merged_vep_98_GRCh37.tar.gz pipeline/projects/ensembl-vep/homo_sapiens_merged_vep.tar.gz")

            // ftp://ftp.ensembl.org/pub/release-75/fasta/homo_sapiens/dna/Homo_sapiens.GRCh37.75.dna.primary_assembly.fa.gz
            sh("ln -s /external_resources/Homo_sapiens.GRCh37.75.dna.primary_assembly.fa.gz pipeline/projects/ensembl-vep/Homo_sapiens.dna.primary_assembly.fa.gz")

            // ftp://dbnsfp:dbnsfp@dbnsfp.softgenetics.com/dbNSFPv3.5a.zip
            sh("ln -s /external_resources/dbNSFPv3.5a.zip pipeline/projects/ensembl-vep/dbNSFP.zip")
        }

		stage('Build & Publish docker image') {
			def image = "${params.DOCKERHUB}/forome/ensembl-vep:98.GRCh37";
			sh("tar -czh . | docker build - -t ${image} --build-arg DBNSFP_VERSION=3.5a --file pipeline/projects/ensembl-vep/Dockerfile")
			sh("docker push ${image}")
		}

	} catch (Throwable e) {
		throw e
	}

}
